---
const {Acts} = Astro.props;
console.log(Acts);

---

<div x-data=`{Acts:${JSON.stringify(Acts)}, index: 0 }`>
    <h1 class="text-3xl text-center my-4"><span x-text="Acts[index].Titre_A"></span></h1>
    <a x-bind:href="`/activites/${Acts[index].id}`">
        <img x-bind:src="Acts[index].img" alt="image" class="block max-w-[393px] m-auto border-6 border-purple-500"/>
    </a>
    <div class="m-auto gap-4 w-min flex justify-between my-3">
        <button @click="index = (index === 0 ? Acts.length - 1 : index - 1)" class="text-black border-2 rounded-2xl border-purple-500 p-3">Précédent</button>
        <button @click="index = (index === Acts.length - 1 ? 0 : index + 1)" class="text-black border-2 rounded-2xl border-purple-500 p-3">Suivant</button>
    </div>
</div>