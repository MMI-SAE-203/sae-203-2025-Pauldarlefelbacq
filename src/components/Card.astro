---
import { Picture } from 'astro:assets';

const {...film} = Astro.props;
---
<div class=" bg-gris mb-15 text-center align-baseline items-center">
    <h2 class="text-xl font-bold"><span class="text-orange-600">Date</span> {film.Date_passage_F}</h2>
    <a class="flex content-center" href={`/films/${film.id}`}><Picture pictureAttributes={{ class: "size-fit block m-auto overflow-hidden" }} inferSize={true} src=`http://127.0.0.1:8090/api/files/${film.collectionId}/${film.id}/${film.Affiche_F}` alt={film.Nom_F} /></a>
    <h2 class="text-orange-400 font-bold">{film.Nom_F}</h2>
    <ul class="*:mt-2">
        <li>{film.Real}</li>
        <li>{film.Duree}H</li>
        <li>{film.Langage}</li>
        <li class="font-bold mb-5 text-blue-500"><a href=`${film.BA_F}`>Bande annonce</a></li>
    </ul>
    <a class="col-start-2 col-end-2 font-bold text-white bg-black p-3.5 rounded-md border border-solid border-red-600/100 m-10" href={`/films/${film.id}`}>En voir plus</a>
</div>